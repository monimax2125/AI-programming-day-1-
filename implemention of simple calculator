print("1.Addition\n 2.Subtraction\n 3.Multiplication\n 4.Division")
c=int(input("enter your choice:"))
a=int(input("enter the first number:"))
b=int(input("enter the second number:"))
if c=21:
    print(a,"+",b,"=",a+b)
elif c==2:
    print(a,"-",b,"=",a-b)
elif c==3:
    print(a,"*",b,"=",a*b)
elif c==4:
    print(a,"/",b,"=,a/b")
else:
    print("enter a valid choice")
